generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  uuid      String   @id @default(uuid())
  userId    Int      @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)

  @@unique([userId])
}

enum Role {
  USER
  ADMIN
}